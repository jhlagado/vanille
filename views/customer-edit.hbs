<h1>Customer</h1>
<p>
  <form method="post">
    <div class="form-group">
      <label>First Name</label>
      <input type="text" name="first_name" value="{{val.first_name}}" class="form-control">
    </div>
    <div class="form-group">
      <label>Last Name</label>
      <input type="text" name="last_name" value="{{val.last_name}}" class="form-control">
    </div>
    <div class="form-group">
      <label>Email Address</label>
      <input type="text" name="email" value="{{val.email}}" class="form-control">
    </div>
    <div class="form-group">
      <label>Gender</label>
      <input type="text" name="gender"  value="{{val.gender}}" class="form-control">
    </div>
    <div class="form-group">
      <label>IP Address</label>
      <input type="text" name="ip_address" value="{{val.ip_address}}" class="form-control">
    </div>
    <div class="form-group">
    {{#if edit}}
        <button type="submit" name="button" value="save"
          class="btn btn-primary">Save</button>
        &nbsp;
        <button type="submit" name="button" value="delete"
          class="btn btn-danger">Delete</button>
      {{else}}
        <button type="submit" name="button" value="save"
          class="btn btn-primary">Create</button>
      {{/if}}
    </div>
  </form>
</p>