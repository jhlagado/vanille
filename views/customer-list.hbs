<h1>Customers</h1>
<p>
  <a href='/customers/new'>Create new customer</a>
  <form method="post">
      <div class="form-group">
        <label style="display:block;">Filter
          <input type="text" name="filter" class="form-control">
        </label>
      </div>
  </form>
</p>
{{#if list.length}}
<p>
  <table class="table">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Gender</th>
      <th>IP</th>
    </tr>
    {{#each list}}
    <tr>
      <td>
        <a href="/customers/{{this.id}}">{{this.first_name}}</a>
      </td>
      <td>
        <a href="/customers/{{this.id}}">{{this.last_name}}</a>
      </td>
      <td>{{this.email}}</td>
      <td>{{this.gender}}</td>
      <td>{{this.ip_address}}</td>
    </tr>
    {{/each}}
  </table>
</p>
{{/if}}